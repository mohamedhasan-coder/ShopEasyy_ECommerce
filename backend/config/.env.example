# Port number on which the server will run (e.g., 3000, 5000)
PORT=

# Database connection string (e.g., MongoDB, PostgreSQL, MySQL URL)
DB_URL=

# Secret key used to sign and verify JWT tokens (keep this strong & private)
JWT_SECRET_KEY=

# JWT token expiration time (e.g., 1d, 7d, 3600s)
JWT_EXPIRE=

# Cookie expiration time in days (e.g., 1, 7, 30)
EXPIRE_COOKIE=

# Email service provider (e.g., gmail, outlook, sendgrid, mailgun)
SMTP_SERVICE=

# Email address used to send emails (e.g., noreply@yourapp.com)
SMTP_MAIL=

# Email account password or app-specific password
SMTP_PASSWORD=
